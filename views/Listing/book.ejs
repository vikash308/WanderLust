<% layout("/layouts/boilerPlate") %>

    <div class="container my-5">
        <div class="row g-5">

            <!-- LEFT: Booking Details -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 p-4">
                    <h2 class="fw-bold mb-3">Confirm and Pay</h2>
                    <p class="text-muted">
                        This is a rare find. <strong>
                            <%= listing.title %>
                        </strong> is usually booked.
                    </p>

                    <!-- Trip Details -->
                    <div class="border rounded-3 p-4 my-4">
                        <h5 class="fw-semibold mb-3">Your trip</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Dates</span>
                            <span>
                                <%= checkIn %> – <%= checkOut %>
                            </span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <span>Guests</span>
                            <span>
                                <%= guests %> guest<%= guests> 1 ? 's' : '' %>
                            </span>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="border rounded-3 p-4 mb-4">
                        <h5 class="fw-semibold mb-3">Contact Information</h5>
                        <p><strong>Phone:</strong>
                            <%= phone %>
                        </p>
                        <p><strong>Email:</strong>
                            <%= email %>
                        </p>
                        <% if (notes && notes.trim() !=='' ) { %>
                            <p><strong>Special Request:</strong>
                                <%= notes %>
                            </p>
                            <% } %>

                                <p class="text-muted small mt-3">
                                    We'll send a confirmation message. Standard rates apply.
                                </p>
                    </div>
                </div>
            </div>

            <!-- RIGHT: Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 p-3">
                    <img src="<%= listing.image.url %>" class="img-fluid rounded mb-3" alt="Property photo">

                    <h6 class="fw-semibold">
                        <%= listing.title %>
                    </h6>
                    <div class="text-muted small mb-3">
                        ⭐ <%= listing.rating %> (<%= listing.reviews.length %> reviews)
                                <% if (listing.isSuperhost) { %> • Superhost <% } %>
                    </div>

                    <hr>

                    <h6 class="fw-bold mb-3">Price Details</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span>
                            <%= nights %> night<%= nights> 1 ? 's' : '' %> × ₹<%= listing.price %>
                        </span>
                        <span>₹<%= listing.price * nights %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Special offer</span>
                        <span class="text-success">−₹<%= discount %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Taxes</span>
                        <span>₹<%= taxes %></span>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between fw-bold">
                        <span>Total (INR)</span>
                        <span>₹<%= total %></span>
                    </div>
                    <form action="/listing/<%= listing._id%>/payment">
                        <button class="btn btn-danger w-100 mt-3">Pay Now &nbsp;&nbsp;&nbsp;₹<%= total %></button>
                    </form>
                </div>
            </div>
        </div>
    </div>