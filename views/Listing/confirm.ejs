<% layout("/layouts/boilerPlate") %>

<style>

  .confirmation-card {
    background: #fff;
    border-radius: 15px;
    padding: 40px 30px;
    text-align: center;
    box-shadow: 0 15px 25px rgba(0,0,0,0.2);
    max-width: 450px;
    width: 100%;
    animation: fadeIn 0.6s ease-out;
  }

  .confirmation-card h2 {
    color: #28a745;
    margin-bottom: 20px;
    font-weight: 600;
  }

  .checkmark {
    font-size: 60px;
    color: #fe424d;
    margin-bottom: 20px;
  }

  .confirmation-card p {
    font-size: 18px;
    color: #555;
    margin-bottom: 30px;
  }

  .btn-home {
    background-color: #fe424d;
    color: #fff;
    font-weight: 600;
    padding: 12px 30px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s;
  }

  .btn-home:hover {
    background-color: #fe424d;
    color: #fff;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px);}
    to { opacity: 1; transform: translateY(0);}
  }
</style>

<div class="confirmation-card">
  <div class="checkmark">✔️</div>
  <h2>Booking Confirmed!</h2>
  <p>Your booking has been successfully completed. Thank you for choosing us!</p>
  <a href="/listing" class="btn-home">Go to Home Page</a>
</div>
